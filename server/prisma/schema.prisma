generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define the User model (table)
model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  name         String?
  createdAt    DateTime @default(now())

  // Relation: A user can have many wallets
  wallets Wallet[]
  offers  P2POffer[] 
}

// Define the Wallet model (table)
model Wallet {
  id             Int     @id @default(autoincrement())
  currency       String  // e.g., "ETH", "BTC", "USDC"
  balance        Decimal @default(0)
  depositAddress String  @unique

  // Relation: A wallet must belong to one user
  userId Int
  user   User @relation(fields: [userId], references: [id])
}

model P2POffer {
  id        Int      @id @default(autoincrement())
  offerType String   // "BUY" or "SELL"
  asset     String   // e.g., "ETH"
  amount    Decimal
  price     Decimal
  status    String   @default("OPEN") // "OPEN", "ACCEPTED", "CLOSED"
  createdAt DateTime @default(now())

  // --- Corrected Relation ---
  sellerId  Int
  seller    User     @relation(fields: [sellerId], references: [id])
}